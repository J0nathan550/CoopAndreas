<Window
    x:Class="Launcher.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:extended="http://schemas.xceed.com/wpf/xaml/toolkit"
    xmlns:local="clr-namespace:Launcher"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="CoopAndreas Launcher"
    Width="330"
    Height="340"
    Icon="/Assets/app_icon.ico"
    Loaded="Window_Loaded"
    ResizeMode="CanMinimize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <TabControl>
            <TabItem>
                <TabItem.Header>
                    <TextBlock Name="lbConnect" Text="Connect" />
                </TabItem.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="10">
                            <TextBlock
                                Name="lbConnectTextBlock"
                                Text="Connect to a CoopAndreas Server"
                                TextTrimming="CharacterEllipsis" />
                            <extended:WatermarkTextBox
                                Name="tbNickname"
                                Margin="0,5,0,5"
                                TextChanged="TbNickname_TextChanged"
                                Watermark="Enter your nickname..." />
                            <extended:WatermarkTextBox
                                Name="tbIpPort"
                                Margin="0,0,0,5"
                                TextChanged="TbIpPort_TextChanged"
                                Watermark="Enter IP:Port of server (example 127.0.0.1:6767)" />
                            <extended:WatermarkTextBox
                                Name="tbSerialKey"
                                Margin="0,0,0,5"
                                TextChanged="TbSerialKey_TextChanged"
                                Watermark="Enter your serial key..." />
                            <TextBlock
                                Name="lbImportant"
                                Margin="0,0,0,5"
                                Text="IMPORTANT: You are playing the alpha/beta version  of CoopAndreas, this version needs a beta test serial key. Don't worry, the mod as well as the serial key are completely free. Go to our Discord server, and type in the command below  into any channel"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="WrapWithOverflow" />
                            <Grid Margin="0,0,0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="auto" />
                                </Grid.ColumnDefinitions>
                                <extended:WatermarkTextBox
                                    Name="tbGen"
                                    IsReadOnly="True"
                                    IsReadOnlyCaretVisible="False"
                                    Watermark="/gen blahblah" />
                                <Button HorizontalAlignment="Right" Click="CopyButtonGen_Click">
                                    <TextBlock
                                        Name="lbCopyGen"
                                        Text="Copy"
                                        TextTrimming="CharacterEllipsis" />
                                </Button>
                                <Button
                                    Grid.Column="1"
                                    Margin="5,0,0,0"
                                    Click="DiscordServer_Clicked">
                                    <TextBlock
                                        Name="lbDiscordServer"
                                        Text="Discord Server"
                                        TextTrimming="CharacterEllipsis" />
                                </Button>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>
                    <Button
                        Grid.Row="1"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Click="ConnectToServer_Click">
                        <TextBlock
                            Name="lbConnectToServer"
                            Text="Connect to Server"
                            TextTrimming="CharacterEllipsis" />
                    </Button>
                </Grid>
            </TabItem>
            <!--
            <TabItem>
                <TabItem.Header>
                    <TextBlock Name="lbServer" Text="Server" />
                </TabItem.Header>
            </TabItem>
            -->
            <TabItem>
                <TabItem.Header>
                    <TextBlock Name="lbConfig" Text="Config" />
                </TabItem.Header>
                <StackPanel Margin="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Name="lbLanguage"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="Language:"
                            TextTrimming="CharacterEllipsis" />
                        <ComboBox
                            Name="cbLanguage"
                            Grid.Column="1"
                            Margin="5,0,0,0"
                            SelectionChanged="CbLanguage_SelectionChanged">
                            <ComboBoxItem Content="English" />
                            <ComboBoxItem Content="Русский" />
                            <ComboBoxItem Content="Português" />
                            <ComboBoxItem Content="Українська" />
                        </ComboBox>
                    </Grid>
                    <Grid Margin="0,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Name="lbKillProcess"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="Kill GTA-SA Processes before start:"
                            TextTrimming="CharacterEllipsis" />
                        <CheckBox
                            Name="killGtaProcessesCheckBox"
                            Grid.Column="1"
                            Margin="5,0,0,0"
                            Click="KillGtaProcessesCheckBox_Clicked" />
                    </Grid>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>